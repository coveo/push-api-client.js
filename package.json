{
  "name": "@coveo/push-api-client",
  "version": "1.1.2",
  "description": "Push API client",
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "type": "commonjs",
  "types": "./dist/definitions/index.d.ts",
  "dependencies": {
    "@coveord/platform-client": "^25.0.0",
    "abortcontroller-polyfill": "^1.7.1",
    "axios": "^0.21.1",
    "dayjs": "^1.10.4",
    "isomorphic-fetch": "^3.0.0"
  },
  "devDependencies": {
    "@types/jest": "27.0.2",
    "@types/node": "16.10.2",
    "cz-conventional-changelog": "3.3.0",
    "dotenv": "10.0.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "gts": "3.1.0",
    "husky": "7.0.2",
    "jest": "27.2.4",
    "lint-staged": "11.1.2",
    "nodemon": "2.0.13",
    "prettier": "2.4.1",
    "standard-version": "9.3.1",
    "ts-jest": "27.0.5",
    "ts-node": "10.2.1",
    "typedoc": "0.22.4",
    "typescript": "4.4.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "node ./hooks/commit-msg.js",
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,html,vue,scss,css,md,yml}": "prettier --write",
    "**/*.ts": "eslint --fix"
  },
  "engines": {
    "node": ">=14.16.1"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:dev": "jest --watch",
    "dev": "nodemon --watch \"src/**\" --ext \"ts,json\" --ignore \"src/**/*.spec.ts\" --exec \"ts-node src/localtest.ts\"",
    "lint": "prettier --config ./.prettierrc.js --check ./src && eslint ./src",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "prettier:check": "prettier .",
    "prettier:fix": "prettier --write .",
    "commit": "git-cz",
    "release": "standard-version && git push && git push --tags",
    "prepublishOnly": "npm run release && npm run doc",
    "doc": "typedoc --out ./dist/docs ./src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coveo/push-api-client.js.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/coveo/push-api-client.js/issues"
  },
  "homepage": "https://github.com/coveo/push-api-client.js#readme"
}
