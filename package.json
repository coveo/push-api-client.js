{
  "name": "@coveo/push-api-client",
  "version": "2.4.5",
  "description": "Push API client",
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "type": "commonjs",
  "types": "./dist/definitions/index.d.ts",
  "dependencies": {
    "@coveo/bueno": "^0.34.1",
    "@coveord/platform-client": "^31.0.0",
    "abortcontroller-polyfill": "^1.7.1",
    "axios": "^0.27.0",
    "dayjs": "^1.10.4",
    "isomorphic-fetch": "^3.0.0"
  },
  "devDependencies": {
    "@coveo/push-api-client": "file:.",
    "@types/jest": "27.5.2",
    "@types/node": "17.0.40",
    "@typescript-eslint/eslint-plugin": "5.27.0",
    "@typescript-eslint/parser": "5.27.0",
    "cz-conventional-changelog": "3.3.0",
    "dotenv": "16.0.1",
    "eslint": "8.17.0",
    "eslint-config-prettier": "8.5.0",
    "gts": "3.1.0",
    "husky": "8.0.1",
    "jest": "28.1.0",
    "lint-staged": "12.5.0",
    "nodemon": "2.0.16",
    "prettier": "2.6.2",
    "standard-version": "9.5.0",
    "ts-jest": "28.0.4",
    "ts-node": "10.8.1",
    "typedoc": "0.22.17",
    "typescript": "4.7.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "node ./hooks/commit-msg.js",
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,html,vue,scss,css,md,yml}": "prettier --write",
    "**/*.ts": "eslint --fix"
  },
  "engines": {
    "node": ">=14.16.1"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:dev": "jest --watch",
    "dev": "nodemon --watch \"src/**\" --ext \"ts,json\" --ignore \"src/**/*.spec.ts\" --exec \"ts-node src/localtest.ts\"",
    "lint": "prettier --config ./.prettierrc.js --check ./src && eslint ./src",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "prettier:check": "prettier .",
    "prettier:fix": "prettier --write .",
    "commit": "git-cz",
    "release": "standard-version && git push && git push --tags",
    "prepublishOnly": "npm run release && npm run doc",
    "doc": "typedoc --out ./dist/docs ./src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coveo/push-api-client.js.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/coveo/push-api-client.js/issues"
  },
  "homepage": "https://github.com/coveo/push-api-client.js#readme"
}
