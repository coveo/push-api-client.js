{
  "name": "@coveo/shovel",
  "version": "0.0.4",
  "description": "Push API client",
  "main": "./dist/index.js",
  "files": [
    "./dist"
  ],
  "type": "commonjs",
  "types": "./dist/definitions/index.d.ts",
  "dependencies": {
    "@coveord/platform-client": "^19.1.0",
    "abortcontroller-polyfill": "^1.7.1",
    "axios": "^0.21.1",
    "dayjs": "^1.10.4",
    "isomorphic-fetch": "^3.0.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.2",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^9.0.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "gts": "^3.1.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "jest-mock-axios": "^4.4.0",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "standard-version": "^9.3.0",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "typedoc": "^0.20.36",
    "typescript": "^4.2.4"
  },
  "husky": {
    "hooks": {
      "commit-msg": "node ./hooks/commit-msg.js",
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,html,vue,scss,css,md,yml}": "prettier --write",
    "**/*.ts": "eslint --fix"
  },
  "engines": {
    "node": ">=14.16.1"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:dev": "jest --watch",
    "dev": "nodemon --watch \"src/**\" --ext \"ts,json\" --ignore \"src/**/*.spec.ts\" --exec \"ts-node src/localtest.ts\"",
    "lint": "prettier --config ./.prettierrc.js --check ./src && eslint ./src",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "prettier:check": "prettier .",
    "prettier:fix": "prettier --write .",
    "commit": "git-cz",
    "release": "standard-version && git push && git push --tags",
    "prepublish": "npm run release && npm run doc",
    "doc": "typedoc --out ./dist/docs ./src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coveo/shovel.js.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/coveo/shovel.js/issues"
  },
  "homepage": "https://github.com/coveo/shovel.js#readme"
}
