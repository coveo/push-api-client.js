{
  "name": "shovel",
  "version": "0.0.1",
  "description": "Push API client",
  "main": "./dist/index.js",
  "type": "commonjs",
  "types": "./dist/definitions/index.d.ts",
  "dependencies": {},
  "devDependencies": {
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "gts": "^3.1.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "standard-version": "^9.3.0",
    "typescript": "^4.2.4"
  },
  "husky": {
    "hooks": {
      "commit-msg": "node ./hooks/commit-msg.js",
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,html,vue,scss,css,md,yml}": "prettier --write",
    "**/*.ts": "eslint --fix"
  },
  "engines": {
    "node": ">=14.16.1"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "prettier:check": "prettier .",
    "prettier:fix": "prettier --write .",
    "commit": "git-cz",
    "release": "standard-version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coveo/shovel.js.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/coveo/shovel.js/issues"
  },
  "homepage": "https://github.com/coveo/shovel.js#readme"
}
